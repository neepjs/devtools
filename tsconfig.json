{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "createElement",
    "outDir": "./types/",
    "module": "commonjs",
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@neep/core": ["core"],
      "@neep/web": ["web"],
      "@neep/create": ["create"],
      "@neep/devtools": ["devtools"],
      "@neep/web/*": ["web/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
