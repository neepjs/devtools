{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "Neep.createElement",
    "outDir": "./types/",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@neep/devtools": ["src"]
    },
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
